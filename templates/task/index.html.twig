{% extends 'base.html.twig' %}

{% block title %}Todas las Tareas{% endblock %}

{% block body %}

    <div class="example-wrapper">
        <h2>Todas las Tareas</h2>
        <table>
            <tr>
                <th>Tarea</th>
                <th>Prioridad</th>
                <th>Horas aprox.</th>
                <th>Acciones</th>
            </tr>
            {% for task in tasks %}
                <tr>
                    <td>{{ task.title }}</td>
                    <td>{{ task.priority }}</td>
                    <td>{{ task.hours }}</td>
                    <td> ACCIONES </td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
